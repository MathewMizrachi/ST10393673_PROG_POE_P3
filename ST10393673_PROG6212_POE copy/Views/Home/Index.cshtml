@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Apply card-like effect */
    .card {
        background-color: #fff;
        border: none;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 2rem;
        max-width: 600px;
        width: 100%;
        margin: auto;
        animation: fadeIn 1.5s ease-in-out;
    }

    /* Center form elements */
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column; /* Column layout for nav and content */
        justify-content: center; /* Center the card vertically */
        align-items: center; /* Center the card horizontally */
        background-color: #f8f9fa; /* Light background for contrast */
    }

    body, h1, label {
        font-family: 'Poppins', sans-serif;
    }

    .btn {
        width: 100%; /* Full width buttons */
        margin-bottom: 1rem; /* Space between buttons */
    }

    /* Button colors */
    .btn-submit {
        background-color: #28a745; /* Green */
        color: white;
    }

    .btn-verify {
        background-color: #007bff; /* Blue */
        color: white;
    }

    .btn-status {
        background-color: #ffc107; /* Yellow */
        color: black;
    }
</style>

<div class="container">
    <div class="card text-center">
        <h1>@ViewData["Title"]</h1>
        <hr class="my-4">
        <p>Welcome to the Claims Management System! Please select an option below:</p>
        <div>
            <a class="btn btn-submit btn-lg" href="@Url.Action("SubmitClaim", "Claims")">Submit a Claim</a>
            <a class="btn btn-verify btn-lg" href="@Url.Action("VerifyClaims", "Claims")">Verify/Approve Claims</a>
            <a class="btn btn-status btn-lg" href="@Url.Action("ViewStatus", "Claims")">View Claim Status</a>
        </div>
    </div>
</div>
